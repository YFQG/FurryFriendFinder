@{
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}
<section class="vh-100 d-flex justify-content-center align-items-center">
    <div class="card text-center" style="width: 300px;">
        <div class="card-header h5 text-white bg-primary">Confirmación via email</div>
        <div class="card-body px-5">
            <p class="card-text py-2">
                Ingresa el email asociado con tu cuenta para enviarte el codigo de verificacion para la reestablecer contraseña.
            </p>

            <form asp-controller="Login" asp-action="ForgotPassword" method="post">
                <div class="form-outline">
                    <input type="email" name="email" id="email" class="form-control my-3" />
                </div>
                @if(TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                }
                <div class="form-group">
                <input type="submit" value="Enviar Email" class="btn btn-primary" />
                </div>
            </form>
        
            <div class="d-flex justify-content-between mt-4">
                <a class="" asp-action="Login" asp-controller="Login">Back to Login</a>
                <a class="" asp-action="ClientRegister" asp-controller="Login">Register</a>
            </div>
        </div>
    </div>
</section>