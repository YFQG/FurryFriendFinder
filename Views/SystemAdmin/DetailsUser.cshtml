@using FurryFriendFinder.Models.Data;
@model FurryFriendFinder.Models.Data.User
@inject FurryFriendFinderDbContext _Context
@{
    Layout = "_LayoutSystemAdmin";
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Pet</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.BirthDate)
        <dd class="col-sm-9">
                @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.IdRhNavigation.RhType)
         </dt>
        <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IdRhNavigation.RhType)
        </dd>
        
            @if (Model.Phones.Count > 0)
            {
                <dt class="col-sm-11 m-1 text-info">
                    <span >Phones</span>
        </dt>}
            @{
                int p = 0;
            }
            @foreach (var phon in Model.Phones)
            {
               p++;
                <dt class="col-sm-3">
                    <span>Phone @(p)</span>
            </dt>
            <dd  class="col-sm-9">
                @(phon.Phone1)
            </dd>
            }
            @if (Model.Addresses.Count > 0)
            {
                <dt class="col-sm-11  m-1 text-info">
                    <span>Address</span>
        </dt>
            }
            @{
                var ad = 0;
            }
            @foreach (var ads in Model.Addresses)
    {
                ad++;

            <dt class="col-sm-3">
                <span>Address @(ad)</span>
            </dt>
                <dd class="col-sm-9">
                @(ads.Address1)
        </dd>

     }
            @if (Model.Accesses.Count > 0)
            {
                <dt class="col-sm-11 m-1 text-info">
                    <span>Access</span>
        </dt>
            }
    @foreach (var acs in Model.Accesses)
    {
            <dt class="col-sm-3">
                <span>Email</span>
            </dt>

            <dd class="col-sm-9" value="" required>
                    @(acs.Email)
                    </dd>
            <dt class="col-sm-3">Role</dt>
            <dd class="col-sm-9" value="" required>
                    @(acs.IdRoleNavigation.RoleType)
                    </dd>
    }
    </dl>
</div>
<div>
    <a asp-action="User">Back to List</a>
</div>
