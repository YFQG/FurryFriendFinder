            input2_Vaccine.className = 'form-control ';
            input2_Vaccine.required = "true";
          
                const Button_Vaccine = document.createElement('input');
                Button_Vaccine.id = 'BAd' + i2;
                Button_Vaccine.type = 'button';
                Button_Vaccine.value = 'Delete Vaccine';
